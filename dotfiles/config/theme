# edit this file to change your theme
#
# dark / light refers to your system's appearance preference
#
# System Settings → Appearance → Light / Dark / Auto
#
# If you want the same theme regardless of your system preference,
# set light and dark to the same theme, below.

# ghostty themes can be listed with `ghostty +list-themes`
[ghostty]
dark=everforest-medium
light=gruvboxLight

# available nvim themes are in ~/.config/nvim/lua/plugins/themes.lua
[nvim]
dark_theme=everforest
dark_style=dark
light_theme=gruvbox
light_style=light
