# initialize new repositories with a main branch
[init]
  defaultBranch = main

# format `git log` in a more readable way
[format]
  pretty = format:%C(yellow)%h%C(green)%d%Creset %C(blue)%s %C(magenta) [%an, %cr]%Creset
